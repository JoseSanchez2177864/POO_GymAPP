<CrSp>:
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 40

        Label:
            text: "Bienvenido al Gym App"
            font_size: 28
            size_hint_y: None
            height: 50
            pos_hint: {"center_x": 0.5, "top": 0.95}
            halign: 'center'
            valign: 'middle'
            text_size: self.size
        Widget:
            size_hint_y: None
            height: 100

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 120
            spacing: 10
        
            TextInput:
                id: nombreusuario_input
                hint_text: "Escribe tu nombre de usuario aquí"
                font_size: 18
                size_hint_y: None
                height: 40

            TextInput:
                id: nombre_input
                hint_text: "Escribe tu nombre aquí"
                font_size: 18
                size_hint_y: None
                height: 40
            
            TextInput:
                id: apellidos_input
                hint_text: "Escribe tus apellidos aquí"
                font_size: 18
                size_hint_y: None
                height: 40

            TextInput:
                id: peso_input
                hint_text: "Escribe tu peso inicial aquí"
                font_size: 18
                size_hint_y: None
                height: 40
            
            TextInput:
                id: correo_input
                hint_text: "Escribe tu correo aquí"
                font_size: 18
                size_hint_y: None
                height: 40

            TextInput:
                id: contrasena_input
                hint_text: "Escribe tu contraseña aquí"
                password: True
                font_size: 18
                size_hint_y: None
                height: 40

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 10
            padding: [50, 0]

            Button:
                text: 'Crear cuenta'
                font_size: 18
                size_hint: (1, None)
                height: 40
                on_release:
                    root.crear_usuario()

        Label:
            text: "[ref=registro]¿Ya tienes tu cuenta? Inicia Sesión Aquí[/ref]"
            markup: True
            color: 0, 0, 1, 1
            font_size: 16
            size_hint_y: None
            height: 30
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            on_ref_press:
                app.root.current = 'pantalla1'

