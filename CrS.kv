<CrSp>:
    name: "inicio"
    MDScreen:
        md_bg_color: 0.05, 0.05, 0.05, 1

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(20), dp(20)
            size_hint: None, None
            size: dp(360), dp(640)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            # Logo
            FitImage:
                source: "66067803-305d-4968-91c1-ea1c117d6dc6.png"
                size_hint_y: None
                height: dp(120)
                allow_stretch: True
                keep_ratio: True

            # Títulos
            MDLabel:
                text: "ROAD TO FIT"
                font_style: "H4"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                bold: True

            MDLabel:
                text: "CREA TU CUENTA"
                font_style: "H2"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_size: "25sp"
                bold: True

            ScrollView:
                do_scroll_x: False
                size_hint_y: 20

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(15)
                    padding: 0
                    size_hint_y: None
                    height: self.minimum_height

                    MDTextField:
                        id: nombre_input
                        hint_text: "Nombre"
                        icon_left: "account"
                        mode: "fill"
                        fill_color: (0.1, 0.1, 0.1, 1)
                        radius: [10, 10, 10, 10]
                        size_hint_x: 0.9
                        height: dp(60)
                        pos_hint: {"center_x": 0.5}

                    MDTextField:
                        id: apellidos_input
                        hint_text: "Apellidos"
                        icon_left: "account"
                        mode: "fill"
                        fill_color: (0.1, 0.1, 0.1, 1)
                        radius: [10, 10, 10, 10]
                        size_hint_x: 0.9
                        height: dp(60)
                        pos_hint: {"center_x": 0.5}

                    MDTextField:
                        id: nombreusuario_input
                        hint_text: "Nombre de Usuario"
                        icon_left: "account"
                        mode: "fill"
                        fill_color: (0.1, 0.1, 0.1, 1)
                        radius: [10, 10, 10, 10]
                        size_hint_x: 0.9
                        height: dp(60)
                        pos_hint: {"center_x": 0.5}

                    Widget:
                        size_hint_y: None
                        height: dp(40)  # Más espacio entre nombre de usuario y edad/peso

                    MDBoxLayout:
                        orientation: 'horizontal'
                        spacing: dp(15)
                        size_hint_x: 0.9
                        pos_hint: {"center_x": 0.5}
                        height: dp(60)

                        MDTextField:
                            id: edad_input
                            hint_text: "Edad"
                            icon_left: "calendar"
                            mode: "fill"
                            fill_color: (0.1, 0.1, 0.1, 1)
                            radius: [10, 10, 10, 10]
                            size_hint_x: None
                            width: dp(160)  # Más ancho para edad
                            height: dp(60)

                        MDTextField:
                            id: peso_input
                            hint_text: "Peso"
                            icon_left: "dumbbell"
                            mode: "fill"
                            fill_color: (0.1, 0.1, 0.1, 1)
                            radius: [10, 10, 10, 10]
                            size_hint_x: None
                            width: dp(115)  # Más pequeño para peso
                            height: dp(60)

                    MDTextField:
                        id: correo_input
                        hint_text: "Correo"
                        icon_left: "email-outline"
                        mode: "fill"
                        fill_color: (0.1, 0.1, 0.1, 1)
                        radius: [10, 10, 10, 10]
                        size_hint_x: 0.9
                        height: dp(60)
                        pos_hint: {"center_x": 0.5}

                    MDTextField:
                        id: contrasena_input
                        hint_text: "Contraseña"
                        icon_left: "lock-outline"
                        password: True
                        mode: "fill"
                        fill_color: (0.1, 0.1, 0.1, 1)
                        radius: [10, 10, 10, 10]
                        size_hint_x: 0.9
                        height: dp(60)
                        pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "LOGIN"
                md_bg_color: 0.8, 0.1, 0.1, 1
                size_hint_x: 0.9
                pos_hint: {"center_x": 0.5}
                on_release:
                    root.crear_usuario()

            MDLabel:
                text: "¿Ya tienes tu cuenta? [ref=signup][color=CC1A1A]Inicia Sesión Aquí[/color][/ref]"
                halign: "center"
                markup: True
                theme_text_color: "Hint"
                on_ref_press:
                    app.root.current = 'pantalla1'
