<InSp>:
    name: "inicio"

    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "Bienvenido al Gym App"
            font_size: 28
            size_hint_y: None
            height: 50
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 120
            spacing: 10

            TextInput:
                id: nombre_input
                hint_text: "Escribe tu nombre aquí"
                font_size: 18
                size_hint_y: None
                height: 40

            TextInput:
                id: contrasena_input
                hint_text: "Contraseña"
                password: True
                font_size: 18
                size_hint_y: None
                height: 40

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 10
            padding: [50, 0]

            Button:
                text: 'Iniciar Sesión'
                font_size: 18
                size_hint: (1, None)
                height: 40
                on_release:
                    root.verificar_credenciales()

        Label:
            text: "[ref=registro]¿No tienes cuenta? Regístrate aquí[/ref]"
            markup: True
            color: 0, 0, 1, 1
            font_size: 16
            size_hint_y: None
            height: 30
            halign: 'center'
            valign: 'middle'
            text_size: self.size
            on_ref_press:
                app.root.current = 'pantalla2'

