<Planesp>:
    FloatLayout:
        md_bg_color: 0.05, 0.05, 0.05, 1  # Fondo oscuro

        MDLabel:
            text: "Planes de Gimnasio"
            font_size: "24sp"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            bold: True
            pos_hint: {"center_y": 0.92}

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 0.9, 0.75
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            spacing: dp(10)
            padding: dp(10)
            md_bg_color: 0.15, 0.15, 0.15, 1
            radius: [15, 15, 15, 15]

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                MDBoxLayout:
                    id: planes_container
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(10)
                    padding: dp(10)
                    md_bg_color: 0.1, 0.1, 0.1, 1
                    radius: [10, 10, 10, 10]

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            padding: dp(10), 0
            spacing: dp(8)
            pos_hint: {"center_x": 0.5, "y": 0.02}

            MDIconButton:
                icon: "home"
                size_hint: None, None
                size: dp(70), dp(40)
                md_bg_color: 0.8, 0.1, 0.1, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: app.root.current = 'pantalla3'

            MDIconButton:
                icon: "clipboard-list"
                user_font_size: "28sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: 0.8, 0.1, 0.1, 1
                radius: [10, ]
                size_hint: None, None
                size: dp(70), dp(40)
                on_release: app.redirigir_por_rol()  # ✅ Método definido en app.py

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "plus"
                user_font_size: "28sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: 0.8, 0.1, 0.1, 1
                radius: [10, ]
                size_hint: None, None
                size: dp(70), dp(40)

            Widget:
                size_hint_x: 0.5

            MDIconButton:
                icon: "chart-bar"
                user_font_size: "30sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: 0.8, 0.1, 0.1, 1
                radius: [10, ]
                size_hint: None, None
                size: dp(80), dp(45)
                on_release: app.root.current = 'pantalla6'

            MDIconButton:
                icon: "account"
                size_hint: None, None
                size: dp(70), dp(40)
                md_bg_color: 0.8, 0.1, 0.1, 1
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                on_release: app.root.current = 'pantalla5'
